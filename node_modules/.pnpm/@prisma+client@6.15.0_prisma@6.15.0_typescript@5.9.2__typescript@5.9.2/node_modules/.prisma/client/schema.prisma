datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Document {
  id        String   @id @default(cuid())
  title     String
  type      String // memorandum | office_order | communication_letter
  content   String // JSON or serialized blocks
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  tags      String[]
}
